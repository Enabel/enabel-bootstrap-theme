---
import Layout from "../../layouts/Layout.astro";
import SampleModalDelete from "../../components/SampleModalDelete.astro";
---

<Layout title="Sample dashboard">
  <main class="flex-shrink-0 mb-3">
    <div class="container">
      <div class="main-header">
        <h2 class="main-title">Dashboard</h2>
      </div>
      <div class="row mt-3">
        <div class="col-md-3">
          <a href="#" class="widget-link">
            <div class="widget widget-primary">
              <i class="widget-icon col-md-1 fa fa-cart-shopping fa-3x"></i>
              <div class="widget-content col-md-11">
                <h2 class="count">10</h2>
                <p>Product</p>
              </div>
            </div>
          </a>
        </div>
        <div class="col-md-3">
          <a href="#" class="widget-link">
            <div class="widget widget-secondary">
              <i class="widget-icon col-md-1 fa fa-file-contract fa-3x"></i>
              <div class="widget-content col-md-11">
                <h2 class="count">6</h2>
                <p>Contracts</p>
              </div>
            </div>
          </a>
        </div>

        <div class="col-md-3">
          <a href="#" class="widget-link">
            <div class="widget widget-info">
              <i class="widget-icon col-md-1 fa fa-file-alt fa-3x"></i>
              <div class="widget-content col-md-11">
                <h2 class="count">0</h2>
                <p>Reports</p>
              </div>
            </div>
          </a>
        </div>

        <div class="col-md-3">
          <a href="#" class="widget-link">
            <div class="widget widget-warning">
              <i class="widget-icon col-md-1 fa fa-hand-holding-dollar fa-3x"
              ></i>
              <div class="widget-content col-md-11">
                <h2 class="count">101</h2>
                <p>Sales</p>
              </div>
            </div>
          </a>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <i class="fa-regular fa-file-lines"></i> Announcements
            </div>

            <ul class="list-group list-group-flush">
              <li class="list-group-item bg-light">
                <strong
                  >You can use this area to release information to GM
                  administrators. Here are some examples:</strong
                >
              </li>
              <li class="list-group-item">
                Provide additional explanations on how to use the application.
              </li>
              <li class="list-group-item">Remind some usage rules.</li>
              <li class="list-group-item">Announce upcoming updates.</li>
              <li class="list-group-item">Announce a maintenance shutdown.</li>
            </ul>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card mb-3">
            <div class="card-header">
              <i class="fa-solid fa-chart-line"></i> Global statistics
            </div>
            <table class="table table-responsive">
              <thead>
                <tr>
                  <th scope="col">Element</th>
                  <th scope="col" class="text-center">Total</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Products</td>
                  <td class="text-center">10</td>
                </tr>
                <tr>
                  <td>Contracts</td>
                  <td class="text-center">6</td>
                </tr>
                <tr>
                  <td>Reports</td>
                  <td class="text-center">0</td>
                </tr>
                <tr>
                  <td>Sales</td>
                  <td class="text-center">101</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <i class="fa-regular fa-flag"></i> Sales by country
            </div>
            <canvas id="chartProductByCountry"></canvas>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <i class="fa-solid fa-bars-progress"></i> Product by status
            </div>
            <canvas id="chartProductByStatus"></canvas>
          </div>
        </div>
      </div>
    </div>
  </main>
  <SampleModalDelete />
  <script is:inline src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const ctx = document
      .getElementById("chartProductByCountry")
      .getContext("2d");
    const chartProductByCountry = new Chart(ctx, {
      type: "bar",
      data: {
        labels: ["RDC", "BEN", "RWA", "DZA", "BEL", "MAR"],
        datasets: [
          {
            label: "# of sales",
            data: [12, 19, 3, 5, 2, 3],
            borderWidth: 1,
            backgroundColor: [
              "rgb(177 177 177)",
              "rgb(177 177 177)",
              "rgb(177 177 177)",
              "rgb(177 177 177)",
              "rgb(177 177 177)",
              "rgb(177 177 177)",
              "rgb(177 177 177)",
              "rgb(172 161 153)",
              "rgb(172 161 153)",
              "rgb(172 161 153)",
              "rgb(172 161 153)",
              "rgb(172 161 153)",
              "rgb(172 161 153)",
              "rgb(172 161 153)",
              "rgb(172 161 153)",
              "",
              "rgb(230, 83, 0)",
              "rgb(203, 151, 0)",
              "rgb(76, 156, 46)",
            ],
          },
        ],
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true,
          },
        },
      },
    });
    const ctx2 = document
      .getElementById("chartProductByStatus")
      .getContext("2d");
    const chartProductByStatus = new Chart(ctx2, {
      type: "doughnut",
      data: {
        labels: ["New", "Out of stock", "Restock", "Waiting", "Promo"],
        datasets: [
          {
            label: "# of product",
            data: [12, 1, 3, 5, 2],
            borderWidth: 3,
            backgroundColor: [
              "rgb(100, 100, 100)",
              "rgb(249, 181, 0)",
              "rgb(216, 26, 26)",
              "rgb(103, 38, 102)",
              "rgb(0, 125, 165)",
              "rgb(230, 83, 0)",
              "rgb(203, 151, 0)",
            ],
          },
        ],
      },
      options: {
        responsive: true,
      },
    });
  </script>
</Layout>

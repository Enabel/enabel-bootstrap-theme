---
import Layout from "../../layouts/Layout.astro";
import SampleModalDelete from "../../components/SampleModalDelete.astro";
---

<Layout title="Product list">
  <main role="main" class="container">
    <div class="main-header">
      <h2 class="main-title">Dashboard</h2>
    </div>
    <div class="d-flex justify-content-between">
      <div class="btn-group" role="group" aria-label="Actions">
        <a href="/sample/create" class="btn btn-primary"
          ><i class="fa fa-plus"></i> Add a new product</a
        >
      </div>
      <div class="col-md-4">
        <input
          type="text"
          class="form-control"
          id="globalSearch"
          placeholder="Search..."
        />
      </div>
    </div>
    <div class="row g-4 mt-0">
      <div class="col-md-3">
        <div class="row row-cols-1 g-2">
          <div class="col">
            <h4>Filter</h4>
          </div>
          <div class="col">
            <div class="card">
              <div class="card-header">Brand</div>
              <div class="card-body">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="new"
                  />
                  <label class="form-check-label" for="new"> A</label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="start"
                  />
                  <label class="form-check-label" for="start"> B</label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="finish"
                  />
                  <label class="form-check-label" for="finish"> C</label>
                </div>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card">
              <div class="card-header">Price</div>
              <div class="card-body">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="BEL"
                  />
                  <label class="form-check-label" for="BEL"> 1</label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="BEN"
                  />
                  <label class="form-check-label" for="BEN"> 2</label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="RDC"
                  />
                  <label class="form-check-label" for="RDC"> 3</label>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>Product 1</td>
                <td>This is the description for Product 1.</td>
                <td><span class="badge bg-danger">Out of stock</span></td>
                <td>
                  <a
                    href="/sample/details"
                    class="btn btn-sm btn-outline-primary"
                    ><i class="fa fa-eye"></i> Details</a
                  >
                  <a
                    href="/sample/edit"
                    class="btn btn-sm btn-outline-secondary"
                    ><i class="fa fa-pencil"></i> Edit</a
                  >
                  <a
                    href="#"
                    class="btn btn-sm btn-outline-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal"
                    ><i class="fa fa-trash"></i> Delete</a
                  >
                </td>
              </tr>
              <tr>
                <td>2</td>
                <td>Product 2</td>
                <td>This is the description for Product 2.</td>
                <td><span class="badge bg-warning">Restock</span></td>
                <td>
                  <a
                    href="/sample/details"
                    class="btn btn-sm btn-outline-primary"
                    ><i class="fa fa-eye"></i> Details</a
                  >
                  <a
                    href="/sample/edit"
                    class="btn btn-sm btn-outline-secondary"
                    ><i class="fa fa-pencil"></i> Edit</a
                  >
                  <a
                    href="#"
                    class="btn btn-sm btn-outline-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal"
                    ><i class="fa fa-trash"></i> Delete</a
                  >
                </td>
              </tr>
              <tr>
                <td>3</td>
                <td>Product 3</td>
                <td>This is the description for Product 3.</td>
                <td><span class="badge bg-success">In stock</span></td>
                <td>
                  <a
                    href="/sample/details"
                    class="btn btn-sm btn-outline-primary"
                    ><i class="fa fa-eye"></i> Details</a
                  >
                  <a
                    href="/sample/edit"
                    class="btn btn-sm btn-outline-secondary"
                    ><i class="fa fa-pencil"></i> Edit</a
                  >
                  <a
                    href="#"
                    class="btn btn-sm btn-outline-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal"
                    ><i class="fa fa-trash"></i> Delete</a
                  >
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
  <SampleModalDelete />
</Layout>
